{
  "format": "custom",
  "id": "header",
  "json": {
    "Main": {
      "uid": {
        "type": "UID",
        "config": {
          "label": "UID"
        }
      },
      "company_name": {
        "type": "Text",
        "config": {
          "label": "Nome da Empresa",
          "placeholder": "Cozinha Alternativa"
        }
      },
      "company_brand": {
        "type": "Image",
        "config": {
          "label": "Logo",
          "constraint": {
            "width": null,
            "height": null
          },
          "thumbnails": []
        }
      },
      "links": {
        "type": "Group",
        "config": {
          "label": "Links",
          "repeat": true,
          "fields": {
            "emoji": {
              "type": "Text",
              "config": {
                "label": "Emoji",
                "placeholder": "ðŸ›’"
              }
            },
            "label": {
              "type": "Text",
              "config": {
                "label": "Texto",
                "placeholder": "Comprar"
              }
            },
            "path": {
              "type": "Text",
              "config": {
                "label": "Path",
                "placeholder": "/"
              }
            },
            "target": {
              "type": "Select",
              "config": {
                "label": "Onde abrir o link",
                "placeholder": "_self",
                "options": ["_self", "_blank"],
                "default_value": "_self"
              }
            },
            "sublinks": {
              "type": "StructuredText",
              "config": {
                "label": "Sublinks (formato JSON)",
                "placeholder": "[{ emoji: string; title: string; subtitle: string; path: string; target: '_self' | '_blank' }]",
                "allowTargetBlank": true,
                "single": "embed,paragraph"
              }
            }
          }
        }
      }
    }
  },
  "label": "Header",
  "repeatable": true,
  "status": true
}
